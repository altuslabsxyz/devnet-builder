# Stable Devnet Docker Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Image Configuration
# =============================================================================

# Docker image repository
STABLED_IMAGE=ghcr.io/stablelabs/stable

# Image tag (e.g., latest-testnet, latest-mainnet, v0.8.1-testnet, v1.0.0-mainnet)
STABLED_TAG=latest-testnet

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warn, error
STABLED_LOG_LEVEL=info

# =============================================================================
# Port Configuration
# =============================================================================

# Node 0 ports (primary node)
NODE0_RPC_PORT=26657      # CometBFT RPC
NODE0_P2P_PORT=26656      # P2P
NODE0_EVM_PORT=8545       # EVM JSON-RPC
NODE0_GRPC_PORT=9090      # gRPC
NODE0_METRICS_PORT=26660  # Prometheus metrics

# Node 1 ports
NODE1_RPC_PORT=36657
NODE1_P2P_PORT=36656
NODE1_EVM_PORT=18545
NODE1_GRPC_PORT=19090
NODE1_METRICS_PORT=36660

# Node 2 ports
NODE2_RPC_PORT=46657
NODE2_P2P_PORT=46656
NODE2_EVM_PORT=28545
NODE2_GRPC_PORT=29090
NODE2_METRICS_PORT=46660

# Node 3 ports
NODE3_RPC_PORT=56657
NODE3_P2P_PORT=56656
NODE3_EVM_PORT=38545
NODE3_GRPC_PORT=39090
NODE3_METRICS_PORT=56660
